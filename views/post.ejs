<%- include header %>

<div class="span3">

</div>
<div class="span9">

	<form class="form-horizontal" action='/post' method="post" enctype="multipart/form-data">
		<div class="control-group">
			<label class="control-label" for="title">标题：</label>
			<div class="controls">
				<input id="title" name="title" type="text"  />
			</div>
		</div>

        <div class="control-group">
            <label class="control-label" for="productor">产品：</label>
            <div class="controls">
                <select name="productor" >
                    <% productorList.forEach(function (productor, index) { %>
					<option value="<%= index %>"> <%= productor %></option>
                    <% }) %>
                </select>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="classification">分类：</label>
            <div class="controls">
                <select name="classification" >
                    <% classificationList.forEach(function (classification, index) { %>
					<option value="<%= index %>"> <%= classification %></option>
                    <% }) %>
                </select>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="videoName">视频：</label>
            <div class="controls">
                <select name="videoName" >
                    <option></option>
					<% videoList.forEach(function (video, index) { %>
					<option> <%= video %></option>
                    <% }) %>
                </select>
            </div>
        </div>
		<div class="control-group">
			<label class="control-label" for="post">描述：</label>
			<div class="controls">
				<textarea id="post" style="width: 600px" name="post" rows="20" cols="100"></textarea>
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<button type="submit" class="btn">发表</button>
			</div>
		</div>
	</form>
</div>
</div>
<%- include footer %>