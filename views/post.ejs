<%- include header %>

<div class="span10">
	
	<form class="form-horizontal" action='/post' method="post" enctype="multipart/form-data">
		<div class="control-group">
			<label class="control-label" for="title">标题：</label>
			<div class="controls">
				<input id="title" name="title" type="text" />
			</div>
		</div>
        
        <div class="control-group">
            <label class="control-label" for="productor">产品：</label>
            <div class="controls">
                <select name="productor" >
                    <% productorList.forEach(function (productor, index) { %>
                        <option> <%= productor %></option>
                    <% } %>
                    <option>其他</option>
                </select>
            </div>
        </div>
        
        <div class="control-group">
            <label class="control-label" for="classification">分类：</label>
            <div class="controls">
                <select name="classification" >
                    <option>产品介绍</option>
                    <option>产品流程</option>
                    <option>A&Q</option>
                </select>
            </div>
        </div>
        
        <div class="control-group">
            <label class="control-label" for="classification">视频：</label>
            <div class="controls">
                <select name="classification" >
                    <option></option>
                    <option>1.mp4</option>
                    <option>2.mp4</option>
                    <option>3.mp4</option>
                </select>
            </div>
        </div>
        
		<div class="control-group">
			<label class="control-label" for="post">描述：</label>
			<div class="controls">
				<textarea id="post" style="width: 600px" name="post" rows="20" cols="100"></textarea>
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<button type="submit" class="btn">发表</button>
			</div>
		</div>
	</form>
</div>
<%- include footer %>