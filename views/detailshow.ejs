<%- include header %>
	<div class="span3 ">
        <% if (curProductor) { %>
		<ul class="nav nav-list j-nav-side">

			<% classificationList.forEach(function (classification, index) { %>
			<li <% if(curClassification == index) { %> class="active" <% } %> >
				 <a href="/p/<%= curProductor %>/<%= index %>/"><i class="icon-chevron-right"></i> <%= classification %></a>
			</li>
			<% }) %>
		</ul>
        <% } %>
	</div>
	<div class="span9 ">

        <% if (posts.length == 0) { %>
        <div class="text-center">
            <img src="/img/noResult.jpg" />
            <p class="text-error">为什么不给我结果！</p>
        </div>

        <% } %>

		<% posts.forEach(function (post, index) { %>
		<!--<blockquote>-->
        <div class="j-search-result">
			<p>
                <i class="icon-briefcase"></i>  <a href="/p/<%= post.productor %>/<%= post.classification %>/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a>
			</p> 
			<small>作者：<a href="/p/<%= post.productor %>/<%= post.classification %>/<%= post.name %>"><%= post.name %></a> | 
				日期：<%= post.time.minute %></small>
		<!--</blockquote>-->
		</div>
            <% }) %>

		<div class="pagination pagination-right">
			<ul>
                <% if(!isFirstPage) { %>
				<li>
					<a href="?p=<%= page-1 %>">上一页</a>
				</li>
                <% } %>
                <% if(!isLastPage) { %>
				<li>
					<a href="?p=<%= page+1 %>">下一页</a>
				</li>
                <% } %>
			</ul>
		</div>

	</div>

<%- include footer %>