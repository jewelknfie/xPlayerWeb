<%- include header %>
<div class="span3">
</div>

<div class="span9">

    <form class="form-horizontal"  method="post" >
        <div class="control-group">
            <label class="control-label" for="title">标题：</label>
            <div class="controls">
                <input id="title" name="title" type="text" value="<%= post.title %>" disabled="disabled" />
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="productor">产品：</label>
            <div class="controls">
                <select name="productor"   disabled="disabled" >
                    <% productorList.forEach(function (productor, index) { %>
                    <option value="<%= index %>"   <% if (post.productor == index) { %> selected <% } %> > <%= productor %></option>
                    <% }) %>
                </select>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="classification">分类：</label>
            <div class="controls">
                <select name="classification"   disabled="disabled" >
                    <% classificationList.forEach(function (classification, index) { %>
                    <option value="<%= index %>" <% if (post.productor == index) { %> selected <% } %> > <%= classification %></option>
                    <% }) %>
                </select>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="videoName">视频：</label>
            <div class="controls">
                <select name="videoName">
                    <option value="" <% if (post.videoName == '') { %> selected <% } %> ></option>
                    <% videoList.forEach(function (video, index) { %>
                    <option value="<%= video %>" <% if (post.videoName == video) { %> selected <% } %> > <%= video %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="post">描述：</label>
            <div class="controls">
                <textarea id="post" style="width: 600px" name="post" rows="20" cols="100"><%= post.post %></textarea>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <button type="submit" class="btn">保存修改</button>
            </div>
        </div>
    </form>



</div>
<%- include footer %>